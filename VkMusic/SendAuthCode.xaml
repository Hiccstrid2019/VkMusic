<Window x:Class="VkMusic.SendAuthCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VkMusic"
        mc:Ignorable="d"
        Title="Подтверждение входа" Height="100" Width="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="AuthCode" 
                 Grid.Row="0" 
                 Height="20" 
                 Width="100"
                 Text="Введите код..."
                 FontWeight="ExtraLight" FontStyle="Italic"
                 GotFocus="ClearForm" 
                 LostFocus="RestoreCodeBox"/>
        <Button Grid.Row="1" 
                Height="20" 
                Width="70" 
                Content="Отправить"
                Click="SendCode"/>
    </Grid>
</Window>
